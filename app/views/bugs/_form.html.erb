    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :bug_status, style: "display: block" %>
    <%= form.select :bug_status,["Bug","Feature"],prompt:"Select statuse" %>
  </div>
  <div>
    <%= form.label :file, style: "display: block" %>
    <%= form.file_field :file,accept:"jpj,gif,pdf" %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.select :priority,["New","Inprogress","Completed"],prompt:"Select priority" %>
